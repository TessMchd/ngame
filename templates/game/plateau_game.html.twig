
<style>
    #mon_offre, #adv_offre{
        position: absolute;
        width:  100%;
        height: 100%;
        display: block;
        z-index: 2;
        bottom: 0;
        left: 0;
        background-color: rgba(0,0,0,0.1);
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .container{
        margin:0;
        margin-right:0;
        padding: 0 !important;
        width: 100%;
    }
    .choix_carte{
        width: 50%;
        height: 60%;
        background-color: white;
    }

    .carte_top{
        width:100px; display: flex;flex-direction: column;
    }

    .carte_bottom{
        width:100px; display: flex;flex-direction: column;
    }

    .carte_bottom img:nth-child(2) {
        position:absolute;
        z-index: 2;
        margin-top: 10px;
    }
    .carte_bottom img:nth-child(3) {
        position:absolute;
        z-index: 3;
        margin-top: 20px;
    }
    .carte_bottom img:nth-child(4) {
        position:absolute;
        z-index: 4;
        margin-top: 30px;
    }
    .carte_bottom img:nth-child(5) {
        position:absolute;
        z-index: 5;
        margin-top: 40px;
    }

    .carte_top img:nth-child(2) {
        position:absolute;
        z-index: 2;
        margin-top: -10px;
    }
    .carte_top img:nth-child(3) {
        position:absolute;
        z-index: 3;
        margin-top: -20px;
    }
    .carte_top img:nth-child(4) {
        position:absolute;
        z-index: 4;
        margin-top: -30px;
    }
    .carte_top img:nth-child(5) {
        position:absolute;
        z-index: 5;
        margin-top: -40px;
    }



</style>


{% if moi.actions['OFFRE']==true and moi.actions['OFFRE']!= "done"%}
<div id="mon_offre">
    <div class="choix_carte" style="display: flex;align-items: center; flex-direction: column;justify-content: center">
        <p>L'adversaire est en train de choisir une carte </p>
        <div>
            <img style="width:200px" src="{{ asset('img/card/'~cards[moi.actions['OFFRE'][0]].picture ) }}">
            <img style="width:200px" src="{{ asset('img/card/'~cards[moi.actions['OFFRE'][1]].picture ) }}">
            <img style="width:200px" src="{{ asset('img/card/'~cards[moi.actions['OFFRE'][2]].picture ) }}">
        </div>
    </div>
</div>
{% endif %}


{% if adversaire.actions['OFFRE']==true and adversaire.actions['OFFRE']!="done" %}
    <div id="adv_offre">
        <div class="choix_carte" style="display: flex;align-items: center; flex-direction: column;justify-content: center">
            <p>Choississez une de ces cartes </p>
            <div>
                <img style="width:200px" src="{{ asset('img/card/'~cards[adversaire.actions['OFFRE'][0]].picture ) }}">
                <input type="radio"  name="carte_offre"  value="{{ adversaire.actions['OFFRE'][0]}}">
                <img style="width:200px" src="{{ asset('img/card/'~cards[adversaire.actions['OFFRE'][1]].picture ) }}">
                <input type="radio"  name="carte_offre"  value="{{ adversaire.actions['OFFRE'][1]}}">
                <img style="width:200px" src="{{ asset('img/card/'~cards[adversaire.actions['OFFRE'][2]].picture ) }}">
                <input type="radio"  name="carte_offre"  value="{{ adversaire.actions['OFFRE'][2] }}">
            </div>
            <button id="valid_offre">Choisir la carte</button>
        </div>
    </div>
{% endif %}


<div id="game_content">
    <div class="row">
        <div class="col-2">
            {% if player == null  %}
                <p>En attente d'un adversaire</p>
            {% else %}
                <img width="100px" src="{{ asset('img/avatar/'~player.avatar) }}">
                <p>{{ player.pseudo }}</p>
            {% endif %}
        </div>
        <div class="col-5 d-flex justify-content-center align-items-center">
            <div id="adversaires_cartes">
                {% for card in adversaire.handCards %}
                    <img style="width:80px" src="{{ asset('img/plateau/verso_carte.png') }}">
                {% endfor %}
            </div>
        </div>

        <div class="col-3" style="display:flex;justify-content: center;align-items: center">
            {% if adversaire.actions['SECRET']==true %}
                <div style="text-align: center;display:flex;justify-content: center;align-items: center;margin-right: 50px">
                    <img style="width:90px;position: absolute;z-index: 0" src="{{ asset('img/plateau/verso_carte.png')}}">
                    <img style="width:60px;position:relative;z-index:1;" src="{{ asset('img/plateau/action1_1.png')}}">
                </div>
            {% endif %}
            {% if adversaire.actions['DEPOT']==true %}
                <div style="text-align: center;display:flex;justify-content: center;align-items: center;">
                    <img style="width:98px;position: absolute;z-index: 0" id="depot_carte "  class="" src="{{ asset('img/plateau/verso_carte_double.png')}}">
                    <img style="width:60px;position:relative;z-index:1;" id="depot_action" src="{{ asset('img/plateau/action1_2.png')}}">
                </div>
            {% endif %}
        </div>

        <div class="col-2">
