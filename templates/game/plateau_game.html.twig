                    {% endif %}
                    {% if adversaire.actions['DEPOT']==false %}
                        <img id=""  width="90px" src="{{ asset('img/plateau/action2_2.png') }}">
                    {% else %}
                        <div style="width: 90px; height: 55px"></div>
                    {% endif %}
                </div>
